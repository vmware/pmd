    unsigned32
    netmgr_rpc_get_ipv6_addr_mode(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] unsigned32 *pDhcpEnabled,
        [out] unsigned32 *pAutoconfEnabled
