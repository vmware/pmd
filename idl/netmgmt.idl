[
    uuid (2d4c5a20-3e22-11e6-bc12-000c2916159b),
    version(1.0),
    pointer_default(unique)
]

interface netmgmt
{
#include <lw/types.h>
#include "pmdrpctypes.h"
#include "netmgmtrpctypes.h"

    unsigned32
    netmgr_rpc_get_version(
        [in] handle_t hBinding,
        [out] wstring_t* pwszVersion
        );


    /*
     * Interface configuration APIs
     */
    unsigned32
    netmgr_rpc_set_mac_addr(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] wstring_t pwszMacAddress
    );

    unsigned32
    netmgr_rpc_get_mac_addr(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] wstring_t *ppwszMacAddress
    );

    unsigned32
    netmgr_rpc_set_link_mode(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] NET_RPC_LINK_MODE linkMode
    );

    unsigned32
    netmgr_rpc_get_link_mode(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] NET_RPC_LINK_MODE *pLinkMode
    );

    unsigned32
    netmgr_rpc_set_link_mtu(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] unsigned32 mtu
    );

    unsigned32
    netmgr_rpc_get_link_mtu(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] unsigned32 *pMtu
    );

    unsigned32
    netmgr_rpc_set_link_state(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] NET_RPC_LINK_STATE linkState
    );

    unsigned32
    netmgr_rpc_get_link_state(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] NET_RPC_LINK_STATE *pLinkState
    );

    unsigned32
    netmgr_rpc_ifup(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName
    );

    unsigned32
    netmgr_rpc_ifdown(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName
    );

    unsigned32
    netmgr_rpc_get_link_info(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] PNET_RPC_LINK_INFO_ARRAY *ppLinkInfoArray
    );


    /*
     * IP Address configuration APIs
     */
    unsigned32
    netmgr_rpc_set_ipv4_addr_gateway(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] NET_RPC_IPV4_ADDR_MODE mode,
        [in] wstring_t pwszIPv4AddrPrefix,
        [in] wstring_t pwszIPv4Gateway
    );

    unsigned32
    netmgr_rpc_get_ipv4_addr_gateway(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] NET_RPC_IPV4_ADDR_MODE *pMode,
        [out] wstring_t *ppwszIPv4AddrPrefix,
        [out] wstring_t *ppwszIPv4Gateway
    );

    unsigned32
    netmgr_rpc_add_static_ipv6_addr(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] wstring_t pwszIPv6AddrPrefix
    );

    unsigned32
    netmgr_rpc_delete_static_ipv6_addr(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] wstring_t pwszIPv6AddrPrefix
    );

    unsigned32
    netmgr_rpc_set_ipv6_addr_mode(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] unsigned32 enableDhcp,
        [in] unsigned32 enableAutoconf
