     * DHCP options, DUID, IAID configuration APIs
     */
    unsigned32
    netmgr_rpc_set_iaid(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] unsigned32 dwIaid
    );

    unsigned32
    netmgr_rpc_get_iaid(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] unsigned32 *pdwIaid
    );

    unsigned32
    netmgr_rpc_set_duid(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] wstring_t pwszDuid
    );

    unsigned32
    netmgr_rpc_get_duid(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] wstring_t *ppwszDuid
    );

