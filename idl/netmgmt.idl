    unsigned32
    netmgr_rpc_set_ipv6_gateway(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] wstring_t pwszIPv6Gateway
    );

    unsigned32
    netmgr_rpc_get_ipv6_gateway(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] wstring_t *ppwszIPv6Gateway
    );

    unsigned32
    netmgr_rpc_get_ip_addr(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] unsigned32 addrTypes,
        [out] NET_RPC_IP_ADDR_ARRAY **ppIpAddrArray
    );


    /*
     * Route configuration APIs
     */
    unsigned32
    netmgr_rpc_add_static_ip_route(
        [in] handle_t hBinding,
        [in] NET_RPC_IP_ROUTE *pIpRoute
    );

    unsigned32
    netmgr_rpc_delete_static_ip_route(
        [in] handle_t hBinding,
        [in] NET_RPC_IP_ROUTE *pIpRoute
    );

    unsigned32
    netmgr_rpc_get_static_ip_routes(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] NET_RPC_IP_ROUTE_ARRAY **ppIpRouteArray
    );


    /*
     * DNS configuration APIs
     */
    unsigned32
    netmgr_rpc_add_dns_server(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] wstring_t pwszDnsServer
    );

    unsigned32
    netmgr_rpc_delete_dns_server(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] wstring_t pwszDnsServer
    );

    unsigned32
    netmgr_rpc_set_dns_servers(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] NET_RPC_DNS_MODE dwMode,
        [in] PPMD_WSTRING_ARRAY pwszDnsServers
    );

    unsigned32
    netmgr_rpc_get_dns_servers(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] NET_RPC_DNS_MODE *pdwMode,
        [out] PPMD_WSTRING_ARRAY *ppwszDnsServers
    );

    unsigned32
    netmgr_rpc_add_dns_domain(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] wstring_t pwszDnsDomain
    );

    unsigned32
    netmgr_rpc_delete_dns_domain(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] wstring_t pwszDnsDomain
    );

    unsigned32
    netmgr_rpc_set_dns_domains(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] PPMD_WSTRING_ARRAY pwszDnsDomains
    );

    unsigned32
    netmgr_rpc_get_dns_domains(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [out] PPMD_WSTRING_ARRAY *ppwszDnsDomains
    );


