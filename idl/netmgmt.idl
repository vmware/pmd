     * ntp APIs
     */
    unsigned32
    netmgr_rpc_get_ntp_servers(
        [in] handle_t hBinding,
        [out] PPMD_WSTRING_ARRAY *ppwszNtpServers
    );

    unsigned32
    netmgr_rpc_set_ntp_servers(
        [in] handle_t hBinding,
        [in] PPMD_WSTRING_ARRAY pwszNtpServers
    );

    unsigned32
    netmgr_rpc_add_ntp_servers(
        [in] handle_t hBinding,
        [in] PPMD_WSTRING_ARRAY pwszNtpServers
    );

    unsigned32
    netmgr_rpc_delete_ntp_servers(
        [in] handle_t hBinding,
        [in] PPMD_WSTRING_ARRAY pwszNtpServers
    );

    /*
     * Misc APIs
     */
    unsigned32
    netmgr_rpc_set_hostname(
        [in] handle_t hBinding,
        [in] wstring_t pwszHostname
    );

    unsigned32
    netmgr_rpc_get_hostname(
        [in] handle_t hBinding,
        [out] wstring_t *ppwszHostname
    );

    unsigned32
    netmgr_rpc_wait_for_link_up(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] unsigned32 dwTimeout
    );

    unsigned32
    netmgr_rpc_wait_for_ip(
        [in] handle_t hBinding,
        [in] wstring_t pwszInterfaceName,
        [in] unsigned32 dwTimeout,
        [in] NET_RPC_ADDR_TYPE dwAddrTypes
